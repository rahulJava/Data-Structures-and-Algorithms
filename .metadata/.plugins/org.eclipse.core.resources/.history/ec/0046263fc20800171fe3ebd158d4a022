package Thread;

public class A {
	public static void main(String[] args) {
		B b1 = new B();
		b1.start();
	}

}

class B extends Thread
{
	public void run()
	{
		for(int i = 0;i<100;i++)
		{
			if(i%2==0)
			{
				prints.printEven(i);
			}
			else
			{
				prints.printOdd(i);
			}
				
		}
	}
}
class prints
{
	public  static synchronized void printEven (int i)
	{
		System.out.println(i);
	}
	public  static synchronized void printOdd (int i)
	{
		System.out.println(i);
	}
	
}
